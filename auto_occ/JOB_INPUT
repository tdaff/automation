#----------------------
#        MAIN
#----------------------

#GCMC Package to use | FASTGCMC or DLPOLY
&MAIN_GCMC_PACKAGE FASTGCMC

#Enable/Disable use of scheduler | ENABLE or DISABLE
&MAIN_ENABLE_SCHEDULE DISABLE

#----------------------
#        CPMD
#----------------------

#Number of Processors to use in CPMD | e.g.: 8
&CPMD_NUM_PROCESSORS 8

#Orbital Convergence criteria in CPMD | e.g.: 1.0d-5
&CPMD_CONVERGENCE_CRIT_ORBITALS 1.0d-5

#Maximum number of optimization steps | e.g.: 10000
&CPMD_MAX_INTERATIONS 10000

#Absolute path for pseudopotential files | e.g.: /home/program/CHEMISTRY/CPMD/Pseudo_potentials/
&CPMD_PSP_PATH /home/program/CHEMISTRY/CPMD/Pseudo_potentials/

#Default functional type | e.g.: PBE
&CPMD_DEFAULT_FUNCTIONAL PBE

#Default pseudopotential type | e.g.: SG
&CPMD_DEFAULT_PSP_TYPE SG

#Default highest orbital consideration | e.g.: P
&CPMD_DEFAULT_LMAX_FLAG P

#Cutoff for CPMD calculation in angstroms | e.g.: 70.0
&CPMD_CUTOFF 70.0

#Charge of system for CPMD calculation | e.g.: 0
&CPMD_CHARGE 0

#Flag for whether or not to optimize Hydrogens | True or False
&CPMD_OPTIMIZE_HYDROGENS False

#----------------------
#       DL_POLY
#----------------------

#number of gridlines per dimension for guest insertion search | e.g.: 10.0
&DLPOLY_GUEST_GRIDPOINTS 10.0

#Minimum distance to framework for guest insertion in Angstroms. | e.g.: 1.0
&DLPOLY_MIN_GUEST_DISTANCE 1.0

#Number of DL_POLY Molecular types | e.g.: 2
&DLPOLY_MOL_TYPES 2

#Multiplicity of supercell in A direction | e.g.: 2
&DLPOLY_SUPERCELL_DIM_A 2

#Multiplicity of supercell in B direction | e.g.: 2
&DLPOLY_SUPERCELL_DIM_B 2

#Multiplicity of supercell in C direction | e.g.: 2
&DLPOLY_SUPERCELL_DIM_C 2

#See DL_POLY manual | e.g.: 0
&DLPOLY_LEVCFG 0 

#See DL_POLY manual | e.g.: 3
&DLPOLY_IMCON 3

#Filename for VDW params | e.g.: VDW_DLP
&DLPOLY_VDW_FILE VDW_DLP

#Filename for guest information | e.g.: GUEST
&DLPOLY_GUEST_FILE GUEST 

#----------------------
#    GCMC CONTROL
#----------------------

#Required forces cutoff (Angstroms)
&DL_POLY_CUTOFF  12

#Verlet neighbour list shell width (Angstroms)
&DLPOLY_DELR  1.0 

#Ewald sum for electrostatics, with automatic parameter optimisation (0 < f < 1.E . 4)
&DL_POLY_EWALD_PRECISION 1d-6

#Temperature in Kelvin
&DL_POLY_CONTROL_TEMP 273


##
## fastGCMC only section
##

#Number of Guests in fast GCMC
&FAST_NUM_GUESTS 1

#Partial pressure of Guest #1 (FAST GCMC only) (bar)
&FAST_PP_G1   0.850

#Partial pressure of Guest #2 (FAST GCMC only) (bar)
&FAST_PP_G2   0.850

#Partial pressure of Guest #3 (FAST GCMC only) (bar)
&FAST_PP_G3   0.850

#fastGCMC simulation length
# Simulation length and equilibration steps that count towards average. (over all nodes)
&FAST_SIM_LENGTH 1000000

#fastGCMC equilibration time
#First do this number of steps (for each node)
&FAST_EQ_TIME 100000


#----------------------
#        REPEAT
#----------------------

#Input ESP file name in cube format | e.g.: REPEAT_ESP.cube
&REPEAT_ESP_CUBEFILE REPEAT_ESP.cube

#Fit molecular(0) or periodic(1:default) system? | e.g.: 0
&REPEAT_PERIODICITY  1

#van der Waals scaling factor (default = 1.0) | e.g.: 1.0
&REPEAT_VDW_FACTOR 1.0

#Apply RESP penalties?, no(0:default), yes(1) | e.g.: 0
&REPEAT_RESP_PENALTIES 0

#Read cutoff radius? no(0), yes(1:default) | e.g.: 1
&REPEAT_READ_CUTOFF 1

#If flag above=1 provide R_cutoff next (in Bohrs) | e.g.: 20.0
&REPEAT_R_CUTOFF 20.0 

#Apply symmetry restrain? no(0:default), yes(1) | e.g.: 0
&REPEAT_APPLY_SYMMETRY_RESTRAIN 0

#Use Goddard-type restrains? no(0:default), yes(1) | e.g.: 0
&REPEAT_USE_GODDARD 0

#If flag above=1 then provide weight next | e.g.: 0.0
&REPEAT_GODDARD_WEIGHT 0.5

#Enter total charge of the system | e.g.: 0.0
&REPEAT_CHARGE 0.0

#----------------------
#         GCMC
#----------------------

#See GCMC README | e.g.: 1000000
&GCMC_NUMBER_TO_AVERAGE 1000000

#See GCMC README | e.g.: 1000000
&GCMC_ACCEPTANCES 1000000

#See GCMC README | e.g.: 1000000
&GCMC_PRODUCTION_AVERAGE 1000000

#See GCMC README | e.g.: 20000
&GCMC_IDEAL_GAS_PRESSURE 20000

#See GCMC README | e.g.: 100
&GCMC_PROBABILITY_PLOT 100

#Default window size for convergence criteria | e.g.: 100000
&GCMC_WINDOW_SIZE 100000

#GCMC Convergence criteria | e.g.: 0.001
&GCMC_CONVERGENCE_CRITERIA  0.001

#GCMC_GCMCPAR | e.g.: none
&GCMC_GCMCPAR none

#Number of branches for GCMC run | e.g.: 8
&GCMC_NUM_PROCESSORS 8

#Wait time between convergence assessments in minutes. | e.g.: 20
&GCMC_WAIT_TIME 20

#Name of Guest molecule from Guest Library (write "custom" to provide your own)
&GCMC_GUEST_NAME CO2

#----------------------
#      AUTO_OCC
#----------------------

#BACKUP, OVERWRITE, or USE Current CONTROL file if present
&AO_CONTROL_USE BACKUP
